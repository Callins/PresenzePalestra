<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@android:color/background_dark">

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Visualizza Calendario"
            android:id="@+id/btnCalendario"
            android:layout_marginTop="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:visibility="visible"
            android:textColorHint="@android:color/holo_orange_dark"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Anagrafica Giocatori"
            android:id="@+id/btnGiocatori"
        android:textColor="@android:color/white"
            android:textColorHint="@android:color/holo_orange_dark"
        android:layout_below="@+id/btnCalendario"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="33dp" />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Aggiungi Evento"
            android:id="@+id/btnNuovadata"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/holo_orange_dark"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/btnGiocatori"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
